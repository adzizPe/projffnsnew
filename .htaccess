# Set halaman error kustom
ErrorDocument 403 /404.html
ErrorDocument 404 /404.html

# Mencegah akses langsung ke file-file tertentu secara spesifik



# Penting: Tambahkan pengecualian untuk file index dan 404
<Files ~ "^(index\.html|404\.html)$">
  Order allow,deny
  Allow from all
</Files>

# Alternatif: Gunakan mod_rewrite untuk kontrol lebih baik
# Izinkan akses dari situs Anda sendiri saja
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteCond %{HTTP_REFERER} ^https://komunitasffdeliserdang\.com [NC]
  RewriteRule \.(css|js)$ - [L]
  
  # Blokir akses langsung tanpa referer
  RewriteCond %{HTTP_REFERER} !^https://komunitasffdeliserdang\.com [NC]
  RewriteRule \.(css|js)$ - [F,L]
</IfModule>